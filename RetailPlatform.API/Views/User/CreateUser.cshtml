@model RetailPlatform.API.Models.DTO.UserDTO

<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-lg-6">
                <div class="page-header-left">
                    <h3>
                        Kreiraj korisnika
                    </h3>
                </div>
            </div>
            <div class="col-lg-6">
                <ol class="breadcrumb pull-right">
                    <li class="breadcrumb-item"><a href="index.html"><i data-feather="home"></i></a></li>
                    <li class="breadcrumb-item">Korisnici </li>
                    <li class="breadcrumb-item active"> Kreiraj korisnika </li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card tab2-card">
                <div class="card-header">
                    <h5>  Dodaj korisnika</h5>
                </div>
                <div class="card-body">
                    <ul class="nav nav-tabs tab-coupon" id="myTab" role="tablist">
                        <li class="nav-item"><a class="nav-link active show" id="account-tab" data-bs-toggle="tab" href="#account" role="tab" aria-controls="account" aria-selected="true" data-original-title="" title="">Osnovne informacije</a></li>
                    </ul>
                    <form id="create-user" asp-controller="User" asp-action="CreateUser" autocomplete="off" novalidate>
                        <div class="tab-content" id="myTabContent">
                            <div class="tab-pane fade active show" id="account" role="tabpanel" aria-labelledby="account-tab">

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="row">
                                    <div class="form-group row col-xl-6 col-md-4 col-sm-12">
                                        <label class="col-xl-3 col-md-4"><span class="retail-validation">*</span> First Name</label>
                                        <div class="col-xl-8 col-md-7">
                                            @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", autocomplete = "off", required = "required" })
                                            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group row col-xl-6 col-md-4 col-sm-12">
                                        <label class="col-xl-3 col-md-4"><span class="retail-validation">*</span> Last Name</label>
                                        <div class="col-xl-8 col-md-7">
                                            @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", autocomplete = "off", required = "required" })
                                            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group row col-xl-6 col-md-4 col-sm-12">
                                        <label class="col-xl-3 col-md-4"><span class="retail-validation">*</span> Email</label>
                                        <div class="col-xl-8 col-md-7">
                                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", autocomplete = "off", required = "required" })
                                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group row col-xl-6 col-md-4 col-sm-12">
                                        <label class="col-xl-3 col-md-4"><span class="retail-validation">*</span> Address</label>
                                        <div class="col-xl-8 col-md-7">
                                            @Html.TextBoxFor(model => model.Address, new { @class = "form-control", autocomplete = "off", required = "required" })
                                            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group row col-xl-6 col-md-4 col-sm-12">
                                        <label class="col-xl-3 col-md-4"><span class="retail-validation">*</span> City</label>
                                        <div class="col-xl-8 col-md-7">
                                            @Html.TextBoxFor(model => model.City, new { @class = "form-control", autocomplete = "off", required = "required" })
                                            @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group row col-xl-6 col-md-4 col-sm-12">
                                        <label class="col-xl-3 col-md-4"><span class="retail-validation">*</span> Zip Code</label>
                                        <div class="col-xl-8 col-md-7">
                                            @Html.TextBoxFor(model => model.ZipCode, new { @class = "form-control", autocomplete = "off", required = "required" })
                                            @Html.ValidationMessageFor(model => model.ZipCode, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group row col-xl-6 col-md-4 col-sm-12">
                                        <label class="col-xl-3 col-md-4"><span class="retail-validation">*</span> Telephone</label>
                                        <div class="col-xl-8 col-md-7">
                                            @Html.TextBoxFor(model => model.Telephone, new { @class = "form-control", autocomplete = "off", required = "required" })
                                            @Html.ValidationMessageFor(model => model.Telephone, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group row col-xl-6 col-md-4 col-sm-12">
                                        <label class="col-xl-3 col-md-4">  Working Position</label>
                                        <div class="col-xl-8 col-md-7">
                                            @Html.TextBoxFor(model => model.WorkingPosition, new { @class = "form-control", autocomplete = "off", required = "required" })
                                            @Html.ValidationMessageFor(model => model.WorkingPosition, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group row col-xl-6 col-md-4 col-sm-12">
                                        <label class="col-xl-3 col-md-4"><span class="retail-validation">*</span> Password</label>
                                        <div class="col-xl-8 col-md-7">
                                            @Html.TextBoxFor(model => model.Password, new { @class = "form-control", autocomplete = "off", required = "required" })
                                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group row col-xl-6 col-md-4 col-sm-12">
                                        <label class="col-xl-3 col-md-4"><span class="retail-validation">*</span> Role</label>
                                        <div class="col-xl-8 col-md-7">
                                            @Html.DropDownListFor(x => x.SelectedRole, new SelectList(Model.FilteredRoleTypes, "Value", "Text"), "Select Role", htmlAttributes: new { @class = "custom-select form-control", @id = "role" })
                                            @Html.ValidationMessageFor(model => model.SelectedRole, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="pull-right retail-button">
                        <button type="submit" form="create-user" class="btn btn-primary">Sačuvaj</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section dataTables {
    <script src="~/js/custom-js/create-user.js"></script>
}