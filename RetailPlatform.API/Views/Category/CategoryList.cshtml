@model RetailPlatform.API.Models.DTO.CategoryDTO

<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-lg-6">
                <div class="page-header-left">
                    <h3>
                        Kategorije
                    </h3>
                </div>
            </div>
            <div class="col-lg-6">
                <ol class="breadcrumb pull-right">
                    <li class="breadcrumb-item"><a href="#"><i data-feather="home"></i></a></li>
                    <li class="breadcrumb-item">Oglasi</li>
                    <li class="breadcrumb-item active">Kategorije</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <div class="btn-popup pull-right">
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-original-title="test" data-bs-target="#exampleModal">Dodaj kategoriju</button>
                        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title f-w-600" id="exampleModalLabel">Kreiraj kategoriju</h5>
                                        <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                                    </div>
                                    <div class="modal-body">
                                        <form id="create-category" asp-controller="Category" asp-action="CreateCategory" autocomplete="off" novalidate>
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            <div class="form">
                                                <div class="form-group">
                                                    <label class="mb-1"><span class="retail-validation">*</span> Naziv kategorije :</label>
                                                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", autocomplete = "off", required = "required" })
                                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="submit" form="create-category" class="btn btn-primary">Sačuvaj</button>
                                        <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Zatvori</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="basicScenario" class="product-physical table-responsive"></div>
                </div>
            </div>

            <div class="modal fade" id="categoryModal" tabindex="-1" role="dialog" aria-labelledby="categoryModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title f-w-600" id="exampleModalLabel">Ukloni kategoriju</h5>
                            <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                        </div>
                        <div class="modal-body">
                            <form>
                                <div class="form">
                                    <div id="categoryId" class="d-none"></div>
                                    <div></div>
                                    <p id="message"></p>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-primary" onclick="removeCategory()" type="button">Sačuvaj</button>
                            <button class="btn btn-light" type="button" data-bs-dismiss="modal">Zatvori</button>
                        </div>
                    </div>
                </div>
            </div>

            <div id='myModal' class='modal fade'>
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div id='myModalContent'></div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>


@section headSection {
    <link href="~/css/vendors/jsgrid.css" rel="stylesheet" />
}

@section dataTables {
    <script src="~/js/jsgrid/jsgrid.min.js"></script>
    <script src="~/js/jsgrid/jsgrid-category.js"></script>
    <script src="~/js/custom-js/create-category.js"></script>
}

