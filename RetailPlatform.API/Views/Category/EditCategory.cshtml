@model RetailPlatform.API.Models.DTO.CategoryDTO

<div class="modal-header">
    <h5 class="modal-title f-w-600" id="exampleModalLabel">Izmeni kategoriju</h5>
    <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
</div>
<div class="modal-body">
    <form id="edit-category" asp-controller="Category" asp-action="EditCategory" autocomplete="off" novalidate>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        <div class="form">
            <div class="form-group">
                <label class="mb-1"><span class="retail-validation">*</span> Naziv kategorije :</label>
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @id = "categoryName", autocomplete = "off", required = "required" })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>
    </form>
</div>
<div class="modal-footer">
    <button type="submit" form="edit-category" class="btn btn-primary">Save</button>
    <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Close</button>
</div>