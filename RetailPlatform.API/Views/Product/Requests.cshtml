@using System.Security.Claims;

@{
    string role = ((ClaimsIdentity)User.Identity).FindFirst("roleName").Value;
}

<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-lg-6">
                <div class="page-header-left">
                    <h3>
                        Oglasi tražnje
                    </h3>
                </div>
            </div>
            <div class="col-lg-6">
                <ol class="breadcrumb pull-right">
                    <li class="breadcrumb-item"><a href="index.html"><i data-feather="home"></i></a></li>
                    <li class="breadcrumb-item">Oglasi tražnje</li>
                    <li class="breadcrumb-item active">Lista</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!-- Container-fluid Ends-->
<!-- Container-fluid starts-->
<div class="container-fluid">
    <div class="card">
        <div class="card-body">
                <div class="btn-popup pull-right">
                    <a href="@Url.Action("CreateRequest", "Product")" class="btn btn-secondary">Dodaj oglas</a>
                </div>
            <div id="batchDelete" class="category-table user-list order-table"></div>
        </div>
    </div>
    <div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title f-w-600" id="exampleModalLabel">Ukloni zahtev</h5>
                    <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form">
                            <div id="addId" class="d-none"></div>
                            <p id="message"></p>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" onclick="removeAdd()" type="button">Potvrdi</button>
                    <button class="btn btn-light" type="button" data-bs-dismiss="modal">Odustani</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section headSection {
    <link href="~/css/vendors/jsgrid.css" rel="stylesheet" />
}

@section dataTables {
    <script src="~/js/jsgrid/jsgrid.min.js"></script>
    <script src="~/js/jsgrid/jsgrid-request.js"></script>
    <script src="~/js/custom-js/create-add.js"></script>
}

